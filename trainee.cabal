-- Initial trainee.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name: trainee
version: 0.1.0.0
synopsis: Training neural networks
homepage: https://github.com/mvoidex/trainee
license: BSD3
license-file: LICENSE
author: voidex
maintainer: voidex@live.com
category: Machine Learning
build-type: Simple
cabal-version: >=1.10

library
  exposed-modules:
    Numeric.Trainee.Gradee
    Numeric.Trainee.Learnee
    Numeric.Trainee.Neural
    Numeric.Trainee.Types
  build-depends:
    base >= 4.9 && < 4.10,
    ad == 4.*,
    aeson == 1.0.*,
    base-unicode-symbols == 0.2.*,
    containers == 0.5.*,
    deepseq,
    hmatrix == 0.18.*,
    lens == 4.*,
    mtl == 2.*,
    random == 1.*,
    random-fu == 0.2.7.*,
    random-source == 0.3.*,
    reflection == 2.*,
    tagged == 0.8.*
  hs-source-dirs: src
  default-language: Haskell2010
  ghc-options: -Wall -fno-warn-tabs
  default-extensions: UnicodeSyntax

test-suite test
  main-is: Test.hs
  hs-source-dirs: tests
  ghc-options: -threaded -Wall -fno-warn-tabs
  type: exitcode-stdio-1.0
  build-depends:
    base >= 4.9 && < 4.10,
    aeson == 1.0.*,
    base-unicode-symbols == 0.2.*,
    containers == 0.5.*,
    hmatrix == 0.18.*,
    lens == 4.*,
    monad-loops == 0.4.*,
    mtl == 2.*,
    random-source == 0.3.*,
    trainee
  default-extensions: UnicodeSyntax
  default-language: Haskell2010
